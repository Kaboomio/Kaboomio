{
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2018,
        "ecmaFeatures": {
            "impliedStrict": true
        },
        "sourceType": "module"
    },
    "env": {
        "browser": true,
        "es6": true,
        "jest": true,
        "node": true
    },
    "globals": {
        "QUnit": false,
        "supabase": false,
        "add": false,
        "text": false,
        "pos": false,
        "loadSprite": false,
        "scene": false,
        "sprite": false,
        "scale": false,
        "onKeyDown": false,
        "go": false,
        "onUpdate": false,
        "camPos": false,
        "layers": false,
        "layer": false,
        "solid": false,
        "area": false,
        "body": false,
        "onKeyPress": false,
        "destroy": false,
        "lifespan": false,
        "addLevel": false,
        "fixed": false,
        "vec2": false,
        "width": false,
        "height": false








    },
    "rules": {
        "eqeqeq": ["error", "always"],
        "no-console": "warn",
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1,
                "ignoreComments": true
            }
        ],
        "quotes": [
            "error",
            "single",
            {
                "avoidEscape": true,
                "allowTemplateLiterals": true
            }
        ],
        "no-multi-spaces": [
            "error",
            {
                "ignoreEOLComments": true
            }
        ],
        "new-cap": "error",
        "no-redeclare": [
            "error",
            {
                "builtinGlobals": true
            }
        ],
        "semi": ["error", "always"],
        "space-in-parens": ["error"],
        "space-infix-ops": "error",
        "object-curly-spacing": ["error", "always"],
        "comma-spacing": "error",
        "space-before-function-paren": [
            "error",
            {
                "anonymous": "never",
                "named": "never",
                "asyncArrow": "always"
            }
        ],
        "keyword-spacing": [
            "error",
            {
                "before": true,
                "after": true
            }
        ],
        "array-bracket-spacing": "error"
    }
}
